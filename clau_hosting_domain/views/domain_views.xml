<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Domain Form View -->
        <record id="view_domain_service_form" model="ir.ui.view">
            <field name="name">domain.service.form</field>
            <field name="model">domain.service</field>
            <field name="arch" type="xml">
                <form string="Domain">
                    <header>
                        <button name="action_suspend" string="Suspend" type="object" 
                                attrs="{'invisible': [('status', '!=', 'active')]}"
                                groups="clau_hosting_domain.group_hosting_domain_manager"/>
                        <button name="action_reactivate" string="Reactivate" type="object" 
                                attrs="{'invisible': [('status', '!=', 'suspended')]}"
                                groups="clau_hosting_domain.group_hosting_domain_manager"/>
                        <field name="status" widget="statusbar" statusbar_visible="active,suspended,expired"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                            </button>
                            <!-- Add stat button for linked hosting services -->
                            <button name="action_view_hosting" type="object" class="oe_stat_button" icon="fa-server" 
                                    attrs="{'invisible': [('hosting_count', '=', 0)]}">
                                <field name="hosting_count" widget="statinfo" string="Hosting"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g. example.com"/>
                            </h1>
                        </div>
                        <!-- Add expiration alert banner -->
                        <div class="alert alert-warning" attrs="{'invisible': ['|', ('days_to_expire', '>', 30), ('days_to_expire', '=', 0)]}">
                            <strong>Warning!</strong> This domain will expire in <field name="days_to_expire" class="oe_inline"/> days.
                        </div>
                        <group>
                            <group>
                                <field name="customer_id"/>
                                <field name="start_date" widget="date"/>
                                <field name="end_date" widget="date"/>
                                <field name="days_to_expire"/>
                                <field name="domain_type"/>
                            </group>
                            <group>
                                <field name="domain_provider"/>
                                <field name="auto_renew"/>
                                <field name="registry_lock"/>
                                <field name="dns_setup_date" widget="date"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Nameservers">
                                <field name="nameservers" placeholder="ns1.example.com&#10;ns2.example.com"/>
                            </page>
                            <page string="Linked Hosting" autofocus="autofocus">
                                <field name="hosting_ids" mode="tree">
                                    <tree>
                                        <field name="name"/>
                                        <field name="hosting_provider"/>
                                        <field name="server_type"/>
                                        <field name="status" decoration-danger="status=='expired'" decoration-warning="status=='suspended'"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="days_to_expire"/>
                                    </tree>
                                </field>
                                <!-- Remove problematic button and replace with a simple note -->
                                <div class="text-muted mt16 mb16 ml16">
                                    To add a hosting service for this domain, create a new hosting service from the Hosting menu and select this domain.
                                </div>
                            </page>
							<page string="Add-ons/Extensions">
								<field name="extension_ids">
									<tree editable="bottom">
										<field name="name"/>
										<field name="price" sum="Total"/>
										<field name="start_date"/>
										<field name="end_date"/>
										<field name="days_to_expire"/>
										<field name="status"/>
										<field name="description"/>
									</tree>
								</field>
								<group class="oe_subtotal_footer">
									<field name="extension_total" widget="monetary" class="oe_subtotal_footer_separator"/>
								</group>
							</page>
                            <page string="Notes">
                                <field name="note" nolabel="1" placeholder="Internal notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Domain Tree View -->
        <record id="view_domain_service_tree" model="ir.ui.view">
            <field name="name">domain.service.tree</field>
            <field name="model">domain.service</field>
            <field name="arch" type="xml">
                <tree string="Domains" decoration-danger="status=='expired'" decoration-warning="days_to_expire &lt;= 30 and status=='active'" decoration-muted="status=='suspended'">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="domain_provider"/>
                    <field name="domain_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="days_to_expire"/>
                    <field name="status"/>
                    <field name="hosting_count"/>
                </tree>
            </field>
        </record>

        <!-- Domain Action -->
        <record id="action_domain_service" model="ir.actions.act_window">
            <field name="name">Domains</field>
            <field name="res_model">domain.service</field>
            <field name="view_mode">tree,form,kanban,calendar,graph</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first domain service!
                </p>
                <p>
                    Track and manage your domain names and registrations.
                </p>
            </field>
        </record>
		<!-- Domain Calendar View -->
		<record id="view_domain_service_calendar" model="ir.ui.view">
			<field name="name">domain.service.calendar</field>
			<field name="model">domain.service</field>
			<field name="arch" type="xml">
				<calendar string="Domain Expiration" date_start="end_date" date_stop="" color="domain_provider" mode="month" quick_add="False">
					<field name="name"/>
					<field name="customer_id"/>
					<field name="domain_provider"/>
					<field name="days_to_expire"/>
				</calendar>
			</field>
		</record>
    </data>
</odoo>