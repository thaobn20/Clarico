<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Hosting Form View -->
        <record id="view_hosting_service_form" model="ir.ui.view">
            <field name="name">hosting.service.form</field>
            <field name="model">hosting.service</field>
            <field name="arch" type="xml">
                <form string="Hosting">
                    <header>
                        <button name="action_suspend" string="Suspend" type="object" 
                                attrs="{'invisible': [('status', '!=', 'active')]}"
                                groups="clau_hosting_domain.group_hosting_domain_manager"/>
                        <button name="action_reactivate" string="Reactivate" type="object" 
                                attrs="{'invisible': [('status', '!=', 'suspended')]}"
                                groups="clau_hosting_domain.group_hosting_domain_manager"/>
                        <field name="status" widget="statusbar" statusbar_visible="active,suspended,expired"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                            </button>
                            <!-- Add button to go directly to the linked domain -->
                            <button name="action_view_domain" type="object" class="oe_stat_button" icon="fa-globe"
                                    attrs="{'invisible': [('domain_id', '=', False)]}">
                                <field name="domain_id" string="Domain" invisible="1"/>
                                <span>View Domain</span>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="e.g. Premium Hosting Package"/>
                            </h1>
                        </div>
                        <!-- Add expiration alert banner -->
                        <div class="alert alert-warning" attrs="{'invisible': ['|', ('days_to_expire', '>', 30), ('days_to_expire', '=', 0)]}">
                            <strong>Warning!</strong> This hosting service will expire in <field name="days_to_expire" class="oe_inline"/> days.
                        </div>
                        <group>
                            <group>
                                <field name="customer_id"/>
                                <field name="domain_id" domain="[('customer_id', '=', customer_id)]" 
                                       options="{'no_create': True, 'no_open': False}" 
                                       context="{'form_view_ref': 'clau_hosting_domain.view_domain_service_form'}"/>
                                <field name="start_date" widget="date"/>
                                <field name="end_date" widget="date"/>
                                <field name="days_to_expire"/>
                            </group>
                            <group>
                                <field name="hosting_provider"/>
                                <field name="server_type"/>
                                <field name="storage"/>
                                <field name="bandwidth"/>
                                <field name="auto_renew"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Connection Details">
                                <group>
                                    <group>
                                        <field name="ip_address"/>
                                        <field name="admin_url" widget="url"/>
                                    </group>
                                    <group>
                                        <field name="admin_username"/>
                                        <field name="admin_password" password="True"/>
                                    </group>
                                </group>
                            </page>
							 <page string="Add-ons/Extensions">
								<field name="extension_ids">
									<tree editable="bottom">
										<field name="name"/>
										<field name="price" sum="Total"/>
										<field name="start_date"/>
										<field name="end_date"/>
										<field name="days_to_expire"/>
										<field name="status"/>
										<field name="description"/>
									</tree>
								</field>
								<group class="oe_subtotal_footer">
									<field name="extension_total" widget="monetary" class="oe_subtotal_footer_separator"/>
								</group>
							</page>
                            <page string="Notes">
                                <field name="note" nolabel="1" placeholder="Internal notes..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Hosting Tree View -->
        <record id="view_hosting_service_tree" model="ir.ui.view">
            <field name="name">hosting.service.tree</field>
            <field name="model">hosting.service</field>
            <field name="arch" type="xml">
                <tree string="Hosting Services" decoration-danger="status=='expired'" decoration-warning="days_to_expire &lt;= 30 and status=='active'" decoration-muted="status=='suspended'">
                    <field name="name"/>
                    <field name="customer_id"/>
                    <field name="domain_id"/>
                    <field name="hosting_provider"/>
                    <field name="server_type"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="days_to_expire"/>
                    <field name="status"/>
                </tree>
            </field>
        </record>

        <!-- Keep other views (search, calendar, kanban, graph) as they are -->

    </data>
</odoo>