<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Domain Expiration Check -->
        <record id="ir_cron_check_domain_expiry" model="ir.cron">
            <field name="name">Check Domain Expiration</field>
            <field name="model_id" ref="model_domain_service"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_domain_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Hosting Expiration Check -->
        <record id="ir_cron_check_hosting_expiry" model="ir.cron">
            <field name="name">Check Hosting Expiration</field>
            <field name="model_id" ref="model_hosting_service"/>
            <field name="state">code</field>
            <field name="code">model._cron_check_hosting_expiration()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>

        <!-- Email Template for Domain Expiration -->
        <record id="email_template_domain_expiry" model="mail.template">
            <field name="name">Domain Expiration Notification</field>
            <field name="model_id" ref="model_domain_service"/>
            <field name="subject">Domain {{ object.name }} Expiring in {{ object.days_to_expire }} Days</field>
            <field name="email_from">{{ (user.email_formatted) }}</field>
            <field name="email_to">{{ object.customer_id.email }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear {{ object.customer_id.name }},<br/><br/>
                        This is a reminder that your domain <strong>{{ object.name }}</strong> is due to expire in <strong>{{ object.days_to_expire }}</strong> days.<br/><br/>
                        <strong>Domain details:</strong><br/>
                        Domain name: {{ object.name }}<br/>
                        Expiration date: {{ object.end_date }}<br/>
                        Provider: {{ object.domain_provider }}<br/>
                        <br/>
                        Please contact us if you would like to renew this domain. If auto-renewal is enabled, no action is necessary.
                        <br/><br/>
                        Thank you,<br/>
                        {{ user.company_id.name }}
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>

        <!-- Email Template for Hosting Expiration -->
        <record id="email_template_hosting_expiry" model="mail.template">
            <field name="name">Hosting Expiration Notification</field>
            <field name="model_id" ref="model_hosting_service"/>
            <field name="subject">Hosting Service {{ object.name }} Expiring in {{ object.days_to_expire }} Days</field>
            <field name="email_from">{{ (user.email_formatted) }}</field>
            <field name="email_to">{{ object.customer_id.email }}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear {{ object.customer_id.name }},<br/><br/>
                        This is a reminder that your hosting service <strong>{{ object.name }}</strong> is due to expire in <strong>{{ object.days_to_expire }}</strong> days.<br/><br/>
                        <strong>Hosting details:</strong><br/>
                        Service name: {{ object.name }}<br/>
                        Expiration date: {{ object.end_date }}<br/>
                        Provider: {{ object.hosting_provider }}<br/>
                        <br/>
                        Please contact us if you would like to renew this service. If auto-renewal is enabled, no action is necessary.
                        <br/><br/>
                        Thank you,<br/>
                        {{ user.company_id.name }}
                    </p>
                </div>
            </field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>