<?xml version="1.0" encoding="utf-8"?>
<!-- data/default_templates.xml -->
<odoo>
    <data noupdate="1">
        <!-- Default template parameters -->
        <record id="zns_param_order_number" model="zalo.zns.template.param">
            <field name="name">order_number</field>
            <field name="default_value">SO0001</field>
            <field name="sequence">10</field>
            <field name="is_required">True</field>
        </record>
        
        <record id="zns_param_customer_name" model="zalo.zns.template.param">
            <field name="name">customer_name</field>
            <field name="default_value">Customer</field>
            <field name="sequence">20</field>
            <field name="is_required">True</field>
        </record>
        
        <record id="zns_param_order_date" model="zalo.zns.template.param">
            <field name="name">order_date</field>
            <field name="default_value">01/01/2025</field>
            <field name="sequence">30</field>
            <field name="is_required">True</field>
        </record>
        
        <record id="zns_param_amount" model="zalo.zns.template.param">
            <field name="name">amount</field>
            <field name="default_value">1,000,000</field>
            <field name="sequence">40</field>
            <field name="is_required">True</field>
        </record>
    </data>
</odoo>